<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Games</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: rgb(221, 205, 205);
    }

    .cards {
      height: 120px;
      width: 120px;
      display: inline-block;
      margin: 5px;
      border-radius: 10px;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s
    }

    .cards:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .cards img {
      height: 100%;
      width: 100%;
      object-fit: cover;
      border-radius: 10px;
    }

    #game-container {
      display: flex;
      flex-direction: row;
      gap: 10px;
      justify-content: center;
    }

    .games {
      height: 200px;
      width: 300px;
      border-radius: 10px;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      background-color: beige;

    }

    span {
      font-weight: bold;
      font-size: 20px;
      font-family: Arial, Helvetica, sans-serif;
    }

    .games img {
      height: 170px;
      width: 100%;
      border-radius: 10px;

    }

    a {
      text-decoration: none;
      color: black;
    }

    .games:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }
  </style>
</head>

<body>
  <%- include('navbar') %>
    <div class="container d-flex flex-wrap" id="main">
    </div>
    <div class="container" id="section2">
    </div>
    <div id="game-container">
      <a href="game/ticTacToe">
        <div class="games">
          <img src="/images/ticthumb.png">
          <span>Tic-Tac-Toe</span>
        </div>
      </a>
      <a href="game/titan">
        <div class="games">
          <img src="/images/titanthumb.png">
          <div>
            <span>Whack-A-Titan</span>
          </div>
        </div>
      </a>
      <a href="game/rockPaperScissors">
        <div class="games">
          <img src="/images/rockthumb.png">
          <span>Rock-Paper-Scissor</span>
        </div>
      </a>
    </div>
    <script>
      const images = [
        '/images/card.png',
        '/images/card3.png',
        '/images/card11.png',
        '/images/card4.png',
        '/images/card12.png',
        '/images/card5.png',
        '/images/card1.png',
        '/images/card6.png',
        '/images/card7.png',
        '/images/card8.png',
        '/images/card10.png',
        '/images/card13.png',
      ]
      const main = document.getElementById('main')
      for (let i = 0; i < images.length; i++) {
        const card = document.createElement('div')
        card.className = 'cards'
        const img = document.createElement('img')
        img.src = images[i]
        img.alt = 'card image'
        card.appendChild(img)
        main.appendChild(card)
      }
    </script>
</body>

</html>